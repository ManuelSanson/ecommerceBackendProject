<div>
    <h1 class="title"> Products list</h1>

    <table class="productList">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Picture</th>
        </tr>
        {{#if products.length}}
        {{#each products}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.price}}</td>
            <td><img height="72px" width="72px" src={{this.thumbnail}}/></td>
        </tr>
        {{/each}}
        {{/if}}
    </table> 
</div>